<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/detailscreenarrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            android:layout_toLeftOf="@+id/shoe_detail"
            android:src="@drawable/left" />

        <ImageView
            android:id="@+id/shoe_detail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle1"
            android:scaleType="fitCenter"
            android:src="@drawable/cc" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@+id/shoe_detail"
            android:src="@drawable/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike Air Max 2021"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_name"
            android:layout_marginTop="5dp"
            android:text="Sed ut perspiciatis omnis iste natus error"
            android:textColor="#A9A9A9"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginTop="15dp"
            android:text="Size (uk):"
            android:textColor="#A9A9A9"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/size"
            android:layout_marginTop="15dp"
            android:text="Color:"
            android:textColor="#A9A9A9"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color"
            android:layout_marginTop="30dp"
            android:text="Price:"
            android:textColor="#A9A9A9"
            android:textSize="18sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/color"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="$199"
            android:textColor="#FB9794"
            android:textSize="18sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="Add to Cart"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/value"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/color"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>